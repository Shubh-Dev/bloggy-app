

<div class="all-post-container">
    <h1>Total Posts: <%= @posts.count %></h1>

    <% @posts.each do |post| %>
        <%= render post %>
        <div class='comments'>
    <%post.show_recent_comments.each do |comment|%>
    <p>Comments: <%=post.author.name%>: <%=comment.text%></p>
    <%end%>
     </div>
    <% end %>

</div>