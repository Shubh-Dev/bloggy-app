<div class="single-user-container">
<div class="image-and-name-container">
<img src="<%= @user.photo %>" />
<h2><%= @user.name %></h2>
<p>Number of Posts: <%= @user.postscounter %></p>
</div>

<div class="user-bio">
<h4>Bio</div>
<p><%= @user.bio %></p>
</div>

<div class="user-posts">
<%@posts.each do |post| %>
<h4>Post #<%= post.id %></h4>
<h4><%= post.text %></h4>
<p>Comments: <%post.commentscounter%></p>
<p>Likes: <%post.likescounter%></p>
<%end%>

</div>


</div>
